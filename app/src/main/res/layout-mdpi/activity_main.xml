<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DA232222"
    android:onClick="butOpEvent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editShowNumber"
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:layout_weight="1"
        android:background="@color/gray"
        android:gravity="right|center_vertical"
        android:inputType="number|textPersonName"
        android:paddingTop="0pt"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_weight="0">

            <Button
                android:id="@+id/butClr"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:onClick="butClear"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray" />

            <Button
                android:id="@+id/butPlusMinus"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:insetTop="6dp"
                android:onClick="butNumberEvent"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray"
                app:elevation="2dp" />

            <Button
                android:id="@+id/butPer"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:onClick="butPercent"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray" />

            <Button
                android:id="@+id/butDiv"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="butOpEvent"
                android:text="/"
                android:textSize="24sp"
                app:backgroundTint="@color/orange" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/but7"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:onClick="butNumberEvent"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray" />

            <Button
                android:id="@+id/but8"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:onClick="butNumberEvent"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray" />

            <Button
                android:id="@+id/but9"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:onClick="butNumberEvent"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray" />

            <Button
                android:id="@+id/butMul"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="butOpEvent"
                android:text="*"
                android:textSize="24sp"
                app:backgroundTint="@color/orange" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/but4"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:onClick="butNumberEvent"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray" />

            <Button
                android:id="@+id/but5"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:onClick="butNumberEvent"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray" />

            <Button
                android:id="@+id/but6"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:onClick="butNumberEvent"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray" />

            <Button
                android:id="@+id/butSub"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="butOpEvent"
                android:text="-"
                android:textSize="24sp"
                app:backgroundTint="@color/orange" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/but1"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:onClick="butNumberEvent"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray" />

            <Button
                android:id="@+id/but2"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:onClick="butNumberEvent"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray" />

            <Button
                android:id="@+id/but3"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/lightgray"
                android:onClick="butNumberEvent"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:backgroundTint="@color/lightgray" />

            <Button
                android:id="@+id/butAdd"
                android:layout_width="40pt"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="butOpEvent"
                android:text="+"
                android:textSize="24sp"
                app:backgroundTint="@color/orange" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:padding="0pt">

        <Button
            android:id="@+id/but0"
            android:layout_width="81pt"
            android:layout_height="20pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1.9"
            android:background="@color/lightgray"
            android:onClick="butNumberEvent"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:backgroundTint="@color/lightgray" />

        <Button
            android:id="@+id/butdot"
            android:layout_width="40pt"
            android:layout_height="20pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/lightgray"
            android:onClick="butNumberEvent"
            android:text="."
            android:textColor="@color/black"
            android:textSize="24sp"
            app:backgroundTint="@color/lightgray" />

        <Button
            android:id="@+id/butEq"
            android:layout_width="40pt"
            android:layout_height="20pt"
            android:layout_weight="1"
            android:background="@color/lightgray"
            android:onClick="butEqualEvent"
            android:text="="
            android:textColor="@color/black"
            android:textSize="24sp"
            app:backgroundTint="@color/lightgray" />
    </LinearLayout>

</LinearLayout>
